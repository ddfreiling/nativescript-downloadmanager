{
    "editor.tabSize": 2,
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/*.map": true,
        "*.js": true,
        "**/*.js": {
            "when": "$(basename).ts"
        }
    },
    "search.exclude": {
      "**/node_modules": true,
      "**/platforms": true
    }
}